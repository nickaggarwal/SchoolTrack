<h1> All students </h1>

<table>

  <tr>
    <th> First Name </th>
    <th> Last Name </th>
    <th> Class </th>
    <th> Section </th>
    <th> Roll No </th>
    <th> Admission No </th>
    <th> Bus Route </th>
    <th colspan="3" ></th>

  </tr>

    <% @students.each do |student| %>
      <tr>
        <td>
          <%= student.first_name %>
        </td>
        <td>
          <%= student.last_name %>
        </td>
        <td>
          <%= student.in_class %>
        </td>
        <td>
          <%= student.section %>
        </td>
        <td>
          <%= student.roll_no %>
        </td>
        <td>
          <%= student.admin_no %>
        </td>
        <td>
          <%= student.contact_no %>
        </td>
        <td>
          <%= student.bus_route %>
        </td>
        <td>
          <%= link_to 'Show' , student_path(student)  %>
        </td>
        <td>
          <%= link_to 'Edit' , edit_student_path(student)  %>
        </td>
        <td>
          <%= link_to 'Delete' , student_path(student) , method: :delete , data: { confirm: 'Are you sure ?'}  %>
        </td>
    <% end %>

</table>